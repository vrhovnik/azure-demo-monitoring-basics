@page
@model Monitoring.General.Pages.Custom.SendLogPageModel

@{
    ViewData["Title"] = "Send custom log";
}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-page="/Info/Dashboard">Dashboard</a>
        </li>
        <li aria-current="page"
            class="breadcrumb-item active">
            Sending custom log
        </li>
    </ol>
}

<h2>
    Send custom log below
</h2>

@if (string.IsNullOrEmpty(Model.Message))
{
    <p class="text-warning">@Model.Message</p>
}

<form enctype="multipart/form-data"
      method="post">
    <div class="form-group">
        <label asp-for="LogViewModel.Name">Enter text</label>
        <input asp-for="LogViewModel.Name"
               class="form-control"
               required="required"
               type="text">
    </div>
    <div class="form-group">
        <label asp-for="LogViewModel.CounterName">Enter counter name</label>
        <input asp-for="LogViewModel.CounterName"
               class="form-control"
               required="required"
               value="mycounter"
               type="text">
    </div>
    <div class="form-group">
        <label asp-for="LogViewModel.CounterValue">Enter counter value (number)</label>
        <input asp-for="LogViewModel.CounterValue"
               class="form-control"
               required="required"
               value="231"
               type="number">
    </div>
    <div class="form-group">
        <button class="btn btn-primary mr-2"
                type="submit">
            Save <i class="fas fa-save"></i>
        </button>
        <a asp-page="/Info/Dashboard">Cancel</a>
    </div>
</form>